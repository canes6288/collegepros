<%= form_for(:session, url: sessions_path) do |f| %>

  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <br/>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <br/>

<%= button_tag(type: 'submit', class: "btn btn-primary sign_in_button") do %>
    <i class="icon-ok icon-white"></i> Sign In
  <% end %>

<% end %>
