<%= form_for(@user) do |f| %>

  <%# render 'shared/error_messages', object: form.object %>

<div class="row">
  <div class="col-sm-12 col-md-12 col-lg-12">
    <%= f.label :name, class: "control-label" %>
    <%= f.text_field :name, class: "form-control input-sm", autofocus: true %>
    </br>

    <%= f.label :email, class: "control-label" %>
    <%= f.text_field :email, class: "form-control input-sm" %>
    </br>

    <%= f.label :password, "Password (6 characters)", class: "control-label" %>
    <%= f.password_field :password, class: "form-control input-sm" %>
    </br>

    <%= f.label :password_confirmation, "Confirmation", class: "control-label" %>
    <%= f.password_field :password_confirmation, class: "form-control input-sm" %>
    </br>

    <%= f.label :phone, "Phone Number", class: "control-label" %>
    <%= f.telephone_field :phone, class: "form-control input-sm" %>
   </br>

    <%= f.label :school, "Pick Your School"%>
    <%= f.select(:school, options_for_select(@school_options)) %>
  </div>
</div>

  <br/>

  <%= button_tag(type: 'submit', class: "btn btn-primary done_button") do %>
    <i class="icon-ok icon-white"></i> Done
  <% end %>
  </div>

<% end %>
